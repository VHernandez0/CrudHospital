@model ML.Paciente
@{
    ViewBag.Title = "form";
}


<h2  style="text-align :center">Añadir un nuevo Paciente</h2>
<hr />
<div class="container-fluid">
    <div class="col">
        @using (Html.BeginForm("Form", "Paciente", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="col-dm-3">
                    @Html.LabelFor(model => model.Nombre)
                    @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control" })
                </div>
                <div class="col-dm-3">
                    @Html.LabelFor(model => model.AP)
                    @Html.TextBoxFor(model => model.AP, new { @class = "form-control" })
                </div>
                <div class="col-dm-3">
                    @Html.LabelFor(model => model.AM)
                    @Html.TextBoxFor(model => model.AM, new { @class = "form-control" })
                </div>
                <div class="col-dm-3">
                    @Html.LabelFor(model => model.FechaNacimiento)
                    @Html.TextBoxFor(model => model.FechaNacimiento, new { @class = "form-control" })
                </div>

            </div>
            <div class="row">
                
                <div class="col-dm-3">
                    @Html.LabelFor(model => model.TipoSangre)
                    @Html.DropDownListFor(model => model.TipoSangre.IdTipoSangre, new SelectList(Model.TipoSangre.Objects, "IdTipoSangre", "Nombre"), "Seleccione una opcion", new { @class = "form-control"})
                </div>
                <div class="col-dm-3">
                    @Html.LabelFor(model => model.Sexo)
                    @Html.TextBoxFor(model => model.Sexo, new { @class = "form-control" })
                </div>
                <div class="col-dm-3">
                    @Html.LabelFor(model => model.Sintomas)
                    @Html.TextBoxFor(model => model.Sintomas, new { @class = "form-control" })
                </div>

            </div>
            <div class="col">
                <input type="submit" value="Guardar" class="btn btn-success" />
                @Html.ActionLink("Regresar", "GetAll", "Paciente", htmlAttributes: new { @class = "btn btn-danger" })
            </div>
        }
    </div>
</div>